@model TechPro.InspectorMVC.Models.PersonModel
@{
    ViewBag.Title = "Editing " + Model.Name;
}

<header class="page-header">
    <h2>Edit Person <small>(#@Model.UUID)</small></h2>
</header>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Name, new { required = "required", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.Birthday, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
            
                <input type="datetime" value="@Model.ToString(" yyyy-mm-dd't'hh:mm:ss.fffk",H tml5DateRenderingMode. datetimeformatinfo.invariantinfo)"
                       @Html.TextBoxFor(model => model.Birthday, new { required = "required", @class = "form-control", type = "datetime" })
                       @Html.ValidationMessageFor(model => model.Birthday)></div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Biography, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Biography)
                @Html.ValidationMessageFor(model => model.Biography)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Credit, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Credit)
                @Html.ValidationMessageFor(model => model.Credit)
            </div>
        </div>
        <input type="datetime" />

        

        <div class="form-group">
            @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UUID, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UUID)
                @Html.ValidationMessageFor(model => model.UUID)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section js {
    @Scripts.Render("~/bundles/jqueryval")
}
